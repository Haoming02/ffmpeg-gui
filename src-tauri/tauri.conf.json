{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ffmpeggui",
  "version": "0.0.1",
  "identifier": "com.ffmpeggui.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FFmpeg GUI",
        "width": 720,
        "height": 400,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
